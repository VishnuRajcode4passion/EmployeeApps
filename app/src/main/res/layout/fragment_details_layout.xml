<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="detailsModel"
            type="com.whiterabit.employee.model.Employee_datclass" />
    </data>
<LinearLayout
    android:layout_margin="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_employe"
        android:layout_weight=".2"
        android:layout_width="0dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_weight=".8"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textStyle="normal"
            android:textSize="16dp"
            android:text="@{detailsModel.name}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{@string/username+String.valueOf(detailsModel.username)}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{@string/email+String.valueOf(detailsModel.email)}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{@string/phone+String.valueOf(detailsModel.phone)}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{@string/website+String.valueOf(detailsModel.website)}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:textSize="14dp"
            android:padding="10dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{@string/companydata}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.company.name}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.company.catchPhrase}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.company.bs}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:textSize="14dp"
            android:padding="10dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{@string/Address}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.address.street}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.address.suite}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.address.city}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />
        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:text="@{detailsModel.address.zipcode}"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:ignore="MissingConstraints" />

        <View
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

</LinearLayout>






</layout>